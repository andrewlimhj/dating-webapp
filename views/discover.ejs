<%- include('sidebar') %>

<div class="container-fluid">
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div
      class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
    >
      <h1 class="h2">Discover</h1>
      <div class="btn-toolbar mb-2 mb-md-0"></div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="profile-card-2">
          <img src="<%= mate.photo_link %>" class="img img-responsive" />
          <div class="profile-name">
            <%= mate.first_name %> <%= mate.last_name %>, <%= age %>
          </div>
          <div class="profile-username"><%= mate.profession %></div>
          <div class="profile-country"><%= mate.country %></div>
        </div>
      </div>
    </div>

    <form
      action="/discover"
      method="POST"
      class="d-flex justify-content-center"
    >
      <input type="hidden" id="mateId" name="mateId" value="<%= mate.id %> " />

      <div class="d-flex justify-content-center col-md-2 p-3">
        <button
          name="skip"
          value="skip"
          type="submit"
          class="btn btn-outline-secondary btn-lg"
        >
          <span data-feather="skip-forward" style="margin-bottom: 3px"></span>
          Skip
        </button>
      </div>

      <div class="d-flex justify-content-center col-md-2 p-3">
        <button
          name="like"
          value="like"
          type="submit"
          class="btn btn-outline-danger btn-lg"
        >
          <span data-feather="heart" style="margin-bottom: 3px"></span>
          Like
        </button>
      </div>
    </form>

    <%- include('footer-sidebar') %>
  </main>
</div>
