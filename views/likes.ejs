<%- include('sidebar') %>
<link href="likes.css" rel="stylesheet" />
<div class="container-fluid">
  <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div
      class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
    >
      <h1 class="h2">Likes</h1>
      <div class="btn-toolbar mb-2 mb-md-0"></div>
    </div>

    <div class="container-fluid">
      <div class="row">
        <% for( let i = 0; i < likes.length; i++ ) { %> <% const firstName =
        likes[i].first_name %> <% const lastName = likes[i].last_name %> <%
        const profession = likes[i].profession %> <%const country =
        likes[i].country %> <%const age = ageArray[i] %> <% const photo =
        likes[i].photo_link %>

        <div class="col-lg-4 mb-3">
          <div class="card p-0">
            <div class="card-image">
              <img src="<%= photo %>" alt="..." />
            </div>
            <div class="card-content d-flex flex-column align-items-center">
              <h4 class="pt-2"><%= firstName %> <%= lastName %></h4>
              <h5><%= profession %></h5>
              <h5><%= country %></h5>
              <h5><%= age %></h5>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <%- include('footer-sidebar') %>
  </main>
</div>
